  <body>

    <h1> STATYSTYKI </h1>

    <form method="POST" action='/statystyki_wyszukaj'>

    <label>Pracownik: </label>
    <select class="statystyki" name="pracownik">
    <option>wszyscy pracownicy</option>
<% for(var i=0; i < result.length; i++) { %>
   <option><%= result[i].pracownik %></option>
<% } %>    
</select>
    <br>

<label>Asortyment: </label>
<select class="statystyki" name="asortyment">
    <option>wszystko</option>
<% for(var i=0; i < resu.length; i++) { %>
   <option><%= resu[i].nazwa %></option>
<% } %>    
</select>
<br>

<label>Od: </label>
<input class="statystyki" type="date" name="od">
<br>

<label>Do:</label>
<input class="statystyki" type="date" name="do">
<br>

<button class="button-28"> WYÅšLIJ ZAPYTANIE </button>

</form>

